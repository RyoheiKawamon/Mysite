<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tv_dot_at_Design_MyList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="・"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_item_name_at_Design_MyList"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:gravity="bottom|start"
        android:text="明太子クリームパスタ"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_dot_at_Design_MyList"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_cal_value_at_Design_MyList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom|end"
        android:text="500kcal"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
         />
</androidx.constraintlayout.widget.ConstraintLayout>