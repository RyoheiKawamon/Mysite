        <item name="colorPrimary">@color/white</item>//dialogのボタンのテキスト、タブの色
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/textColor</item>//buttonの文字色
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_grey</item>
        <item name="colorSecondaryVariant">@color/dark_grey</item>
        <item name="colorOnSecondary">@color/vividGreen</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
